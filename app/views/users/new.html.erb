<div style='padding-left: 20px;'><br>

<h1>Sign Up</h1>
<%= form_for @user do |f| %>
	<%= f.label :username %>
	<%= f.text_field :username %><br>
	<%= f.label :password %>
	<%= f.password_field :password %><br>
	<%= f.label :confirm_password %>
	<%= f.password_field :password_confirmation %>
	<%= f.submit 'Create Account' %>
<% end %>
</div>
